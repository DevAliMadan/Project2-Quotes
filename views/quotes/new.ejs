<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />

    <title>quotes</title>
  </head>
  <body class="bg-gray-100 pt-20 font-sans">
    <%- include('../partials/navbar') %>

    <div class="max-w-2xl mx-auto bg-white shadow-md p-6 rounded-lg">
      <h1 class="text-2xl font-bold mb-4 text-center">Create Your Quote</h1>
      <form action="/quotes" method="post">
        <div>
          <label for="quote" class="block text-gray-700">Quote: </label>
          <input
            type="text"
            name="quote"
            id="quote"
            class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500"
            required
          />
        </div>

        <div>
          <label for="authors" class="block text-gray-700">Author: </label>
          <input
            type="text"
            name="authors"
            id="authors"
            class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500"
          />
        </div>

        <div>
          <label for="category" class="block text-gray-700">Category:</label>
          <select
            name="category"
            class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500"
          >
            <% allCategories.forEach((oneCategory) => { %>
            <option value="<%= oneCategory._id %>">
              <%= oneCategory.name %>
            </option>
            <% }) %>
          </select>
        </div>

        <button
          class="mt-5 w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600"
        >
          Create
        </button>
      </form>
    </div>
  </body>
</html>
