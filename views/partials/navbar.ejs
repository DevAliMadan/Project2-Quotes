<head>
  <link href="/css/style.css" rel="stylesheet" />
</head>

<nav class="bg-white shadow-md fixed top-0 left-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <div class="flex items-center space-x-6">
      <% if (user) { %>
        <a href="/quotes/all-quotes" class="text-gray-700 hover:text-blue-600 transition">All Quotes</a>
        <a href="/quotes/new" class="text-gray-700 hover:text-blue-600 transition">Create Quote</a>
        <a href="/category/new" class="text-gray-700 hover:text-blue-600 transition">Create Category</a>
        <a href="/auth/logout" class="text-red-600 hover:text-red-800 transition">Logout</a>
      <% } else { %>
        <a href="/auth/login" class="text-gray-700 hover:text-blue-600 transition">Login</a>
        <a href="/auth/sign-up" class="text-gray-700 hover:text-blue-600 transition">Sign Up</a>
      <% } %>
    </div>

    <% if (user) { %>
      <div class="text-sm text-gray-600">
        Logged in as: <span class="font-semibold"><%= user.username %></span>
      </div>
    <% } %>
  </div>
</nav>
